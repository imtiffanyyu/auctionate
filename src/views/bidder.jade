doctype html
html(lang='en')
head
	title Auction House Bidder
	link(href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css")
	link(rel="stylesheet" href="/css/style.css")
	meta(name='viewport', content='width=device-width, initial-scale=1')
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
	script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js")
	script(src="/js/custom.js")

body

	include ./navbar.jade

	.row
		
		div(class="blue-grey darken-3 col s6" style="height:100vh")
			table(class="white-text bordered highlight" id="bidders" cellspacing="0" width="100%")
				thead
					tr
						th ID
						th Firstname
						th Lastname
						th City
				tbody
					each bidder in bidders
						tr(class="editbidder")
							td(class="clickedbidderid")= bidder.id
							td=bidder.firstname
							td=bidder.lastname
							td=bidder.city

		div(class="blue-grey darken-2 col s6" style="height:100vh")
			.row
				div(style="margin-top:10px;")
					button(class="btn waves-effect waves-light blue-grey darken-4" id="addbidder") Add Bidder
					a(class="btn waves-effect waves-light deep-orange darken-4" id="canceladdbidder" style="margin-left:10px; display: none") Cancel
							
			.row
						include ./forms/bidderform.jade
						include ./forms/editbidderform.jade
