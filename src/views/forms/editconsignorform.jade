div(id="editconsignorform" style="display:none")
    p#firstname
    p#lastname
    form(action='/consignor' method='post' class='col s12 black-text' style="margin:10px")
        .row(class="col s12")
            input-field(class='col s4')
                label(for="firstname") First Name
                input(name="firstname" type="text" class="validate")

            input-field(class='col s8')
                label(for="lastname") Last Name
                input(name="lastname" type="text" class="validate")

        .row    
            input-field(class='col s12')
                label(for="address") Address
                input#address(name="address" type="text" class="validate")

        .row
            input-field(class='col s2')
                label(for="zipcode") Zipcode
                input#zipcode(name="zipcode" type="text" class="validate")

            input-field(class='col s4')
                label(for="city") City
                input#city(name="city" type="text" class="validate")

            input-field(class='col s6')
                label(for="country") Country
                input#country(name="country" type="text" class="validate")
        .row
            input-field(class='col s4')
                label(for="phone") Phone
                input#phone(name="phone" type="text" class="validate")

            input-field(class='col s8')
                label(for="email") Email
                input#email(name="email" type="text" class="validate")


        .row
            input-field(class='col s6')
                label(for="bankaccount") Bank Account
                input#bankaccount(name="bankaccount" type="text" class="validate")

            div(class="col s3")
                label(for="commission") Commission - %
                input#commission(value="10" name="commission" type="text" class="validate")


            div(class="col s3")
                input-field
                    label(for="fee") Fee - â‚¬
                    input#fee(value="10" name="fee" type="text" class="validate")
        .row
            button(class="btn waves-effect waves-light blue-grey darken-4" type="submit" value="save") Save
